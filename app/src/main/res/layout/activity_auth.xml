<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".ui.AuthActivity">

    <data>
        <import type="jp.study.fuji.tegakimojidetection.viewmodel.AuthViewModel.LoginState" />
        <variable
                name="viewmodel"
                type="jp.study.fuji.tegakimojidetection.viewmodel.AuthViewModel"/>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/text_label_login_status"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_size_normal"
                android:text="@string/label_login_status"
                android:gravity="center_vertical"
                android:textAppearance="@style/Text.Main"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/space_size_normal"
                android:layout_marginStart="@dimen/space_size_normal"
                android:layout_marginEnd="@dimen/space_size_small"
                />
        <TextView
                android:id="@+id/text_current_user"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_size_normal"
                android:gravity="center_vertical"
                app:layout_constraintStart_toEndOf="@+id/text_label_login_status"
                app:layout_constraintTop_toTopOf="@+id/text_label_login_status"
                android:textAppearance="@style/Text.Main"
                android:layout_marginStart="@dimen/space_size_small"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@{viewmodel.displayName}"
                />

        <Button
                android:id="@+id/bt_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{viewmodel.loginState == LoginState.LOGIN ? @string/logout : @string/login}"
                app:layout_constraintTop_toBottomOf="@+id/text_label_login_status"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/space_size_normal"
                android:layout_marginEnd="@dimen/space_size_normal"
                android:layout_marginStart="@dimen/space_size_normal"
                android:onClick="@{() ->    viewmodel.loginState == LoginState.LOGIN ? viewmodel.logout() : viewmodel.login()}"
                />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>